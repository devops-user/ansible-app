server {

	listen 443 ssl;

	ssl_certificate /etc/letsencrypt/live/xsavitsky.devops.srwx.net/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/xsavitsky.devops.srwx.net/private.key;

	location / {
		root /srv/goapp-web;
	}

	location /api/sum {
	proxy_pass http://localhost:8080/sum;
	}

	location /api-diff {
	include_fastcgi_params;
	fastcgi_param SCRIPT_FILENAME /srv/goapp-php/index.php;
	fastcgi_pass unix://var/run/php/php7.0-fpm.sock;
	}
}
